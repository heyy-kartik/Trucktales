generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // url = env("DATABASE_URL")  <-- DELETE THIS LINE
}

model Tale {
  id         String   @id @default(cuid())
  text       String
  driverName String
  driverId   String
  truckId    String
  location   String?
  issue      String?
  severity   String   @default("low")
  sentiment  String   @default("neutral")
  language   String?
  timestamp  DateTime @default(now())

  @@index([timestamp])
  @@index([severity])
}

model Truck {
  id              String   @id @default(cuid())
  truckNumber     String
  driverName      String
  driverId        String
  currentLocation String
  latitude        Float
  longitude       Float
  status          String   @default("active")
  lastUpdate      DateTime @default(now())

  @@index([status])
}

model TaleWithLocation {
  id         String   @id @default(cuid())
  text       String
  driverName String
  driverId   String
  truckId    String
  location   String?
  issue      String?
  severity   String   @default("low")
  sentiment  String   @default("neutral")
  language   String?
  latitude   Float? // Add this
  longitude  Float? // Add this
  timestamp  DateTime @default(now())

  @@index([timestamp])
  @@index([severity])
}
